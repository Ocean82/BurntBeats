# Deploy configuration for Burnt Beats Application

# Entry point for the application
entrypoint = "main.py"

# Command to start the Node.js app
externalPortCommand = "nvm start"
modules = ["nodejs-20", "postgresql-16"]

# Local port configuration
localPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Development Server"

[[workflows.workflow]]
name = "Development Server"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx server/index.ts"

[[workflows.workflow]]
name = "Production Server"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node run-production.js"

[[workflows.workflow]]
name = "Production Build"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node deploy-production-fix.cjs"

[[workflows.workflow]]
name = "Database Migration"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run db:migrate"

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "autoscale"
build = ["sh", "-c", "node deploy-production-fix.cjs"]

[env]
NODE_ENV = "production"
PORT = "5000"
